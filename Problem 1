{
	int ticket250, ticket100, ticket50, ticket25;
	float totaltickets, totalsaleamt;
	char first;

	ticket250 = 5750;
	ticket100 = 28000;
	ticket50 = 35750;
	ticket25 = 18750;
	cout << "Ticket Price     Amt. of Tickets Sold" << endl; 
	cout << " box              " <<  ticket250 << endl;
